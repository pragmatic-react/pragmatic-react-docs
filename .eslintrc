{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json", // tsconfig 사용
    "tsconfigRootDir": "./tsconfig.json",
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "prettier",
    "emotion", // emotion 플러그인 추가
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "plugin:emotion/recommended", // emotion 관련 규칙 추가
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Vite + React에서는 필요 없음
    "@typescript-eslint/no-unused-vars": "warn", // 미사용 변수 경고
    "@typescript-eslint/explicit-function-return-type": "off", // 함수 반환 타입 강제 비활성화
    "prettier/prettier": ["error", { "endOfLine": "auto" }], // Prettier 규칙 적용
    "emotion/jsx-import": "error", // Emotion에서 JSX를 사용하려면 이 규칙을 활성화
  },
  "settings": {
    "react": {
      "version": "detect", // React 버전 자동 감지
    },
  },
}
